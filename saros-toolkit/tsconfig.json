{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // ðŸ‘ˆ change from bundler â†’ node
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // ðŸ‘ˆ for React 17/18+ (instead of preserve)
    "incremental": true,
    "types": [
      "node",
      "react"
    ], // ðŸ‘ˆ explicitly include React & Node types
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@solana/web3.js": [
        "./node_modules/@solana/web3.js"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types"
  ],
  "exclude": [
    "node_modules"
  ]
}
